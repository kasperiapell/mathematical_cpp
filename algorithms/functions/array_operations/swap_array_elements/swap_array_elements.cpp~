// swap_array_elements.cpp

void swap (int *i, int *j) {
  int l = *i;

  *i = *j;
  *j = l;
}

int main () {
  int array [] = { 1, 2, 3 };
  swap(&array[0], &array[1]);
  bool b = array == { 2, 1, 3 };
  std::cout << b;
}


// Given int array [] = { 1, 2, 3 };
// we can call swap(&array[0], &array[1]);
// whence array == { 2, 1, 3 }
